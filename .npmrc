# Required for compatibility with packages that expect dependencies in the root node_modules
# Some Nuxt.js and Vue packages require this for proper functioning
shamefully-hoist=true

# Uses a more compatible linking strategy for complex monorepos and frameworks like Nuxt
# This helps prevent ES Module/CommonJS conflicts
node-linker=hoisted

# Relaxes peer dependency checks to handle complex dependency trees in modern frameworks
strict-peer-dependencies=false
